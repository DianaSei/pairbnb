<%= @listing.name_of_the_building %><br/>
<%= @listing.address%><br/>
<%= @listing.details %><br/>
<%= @listing.price %><br/>


<% if current_user.id == @listing.user_id %>
	<%= link_to "Edit", edit_listing_path(@listing.id) %>
	<%= link_to "Delete", listing_path(@listing.id), method: :delete, data: { confirm: 'Are you sure you want to delete this listing?' } %>
<% else %>
	<%= link_to "Book" %>
<%end%>