
<h1 class="text-center h3 mb-3 font-weight-light" style="margin-top: 5vh"> Here are all your options </h1>


<div class="input-group mb-3 justify-content-center">
  <div class="input-group-prepend">
    <div class="input-group-text">
      <input type="checkbox" aria-label="Checkbox for following text input">
    </div>
  </div>
  <spin class= "input-group-text"> Non-smoking </spin>
  <div class="input-group-prepend">
    <div class="input-group-text">
      <input type="checkbox" aria-label="Checkbox for following text input">
    </div>
  </div>
  <spin class= "input-group-text"> No-pets </spin>
  <div class="input-group-prepend">
    <div class="input-group-text">
      <input type="checkbox" aria-label="Checkbox for following text input">
    </div>
  </div>
  <spin class= "input-group-text"> Late-coder </spin>
  <div class="input-group-prepend">
    <div class="input-group-text">
      <input type="checkbox" aria-label="Checkbox for following text input">
    </div>
  </div>
  <spin class= "input-group-text"> Whole apartment </spin>
  <div class="input-group-prepend">
    <div class="input-group-text">
      <input type="checkbox" aria-label="Checkbox for following text input">
    </div>
  </div>
  <spin class= "input-group-text"> One room </spin>

  <button class="btn btn-outline-success">Search</button>
</div> <br/>

<div class="card-columns text-center">
<% @listings.each do |listing| %>
    
      <div class="card text-center w-75 p-3 justify-content-lg-around mx-auto ">
        <div class="card-header">
          <%= listing.created_at %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= listing.name_of_the_building %></h5>
          <p class="card-text"><%= listing.details %> </p>
          <div class="btn btn-primary"> <%= link_to "More details", listing_path(listing.id), :class => "text-white" %> 
          </div>
        </div>
        <div class="card-footer text-muted">
          Published by: <%=listing.user.full_name %>
        </div>
      </div> <br/>
  
  
    <%end %>
</div> 
<br/>

     <%= paginate @listings %>
